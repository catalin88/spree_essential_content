<% content_for :page_title do %>
  <%= link_to Spree.t('admin.subnav.posts'), admin_pages_path %> / <%= (Spree.t('essential_content.admin.page_edit') + " '#{page.title}'").html_safe %>
<% end %>

<% content_for :sidebar do %>
  <div class="row">
    <div class="col-md-6">
      <%= Spree.t("essential_content.page.accessible") %>:
      <%= page.accessible ? '<span class="label label-success">Yes</span>'.html_safe : '<span class="label label-danger">No</span>'.html_safe %>
    </div>
    <div class="col-md-6">
      <%= Spree.t('essential_content.page.visible') %>:
      <%= page.visible ? '<span class="label label-success">Yes</span>'.html_safe : '<span class="label label-danger">No</span>'.html_safe %>
    </div>
  </div>

  <ul class="nav nav-pills nav-stacked post-menu" data-hook="admin_pages_tabs">
    <%= content_tag :li, class: ('active' if current == "Page Details") do %>
      <%= link_to_with_icon 'edit', Spree.t('essential_content.admin.page_details'), edit_admin_page_url(page) %>
    <% end %>
    <%= content_tag :li, class: ('active' if current == "Contents") do %>
      <%= link_to_with_icon 'list', Spree.t('essential_content.admin.page_contents'), admin_page_contents_url(page) %>
    <% end %>
    <%= content_tag :li, class: ('active' if current == "Images") do %>
      <%= link_to_with_icon 'picture', Spree.t('essential_content.admin.page_images'), admin_page_images_url(page) %>
    <% end %>
  </ul>
<% end %>
